{
  "name": "ai-powered-fullstack-ecommerce-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:smoke:frontend": "jest src/contexts/__tests__/PlpSearchStateContext.test.tsx src/utils/__tests__/orderUtils.test.ts src/utils/__tests__/fetchTrending.test.ts src/utils/__tests__/colorUtils.test.ts src/utils/__tests__/cardUtils.test.ts src/utils/__tests__/formatters.test.ts --runInBand --ci --colors=false",
    "test:smoke:backend": "cd src/app/api/backend && /usr/bin/python3 -m pytest -q test_app.py -k \"query_all_products or query_product_by_id or query_related_products\"",
    "test:smoke": "yarn test:smoke:frontend && yarn test:smoke:backend",
    "test:python": "cd src/app/api/backend && /usr/bin/python3 -m pytest -v",
    "test:python:coverage": "cd src/app/api/backend && /usr/bin/python3 -m pytest --cov=. --cov-report=html --cov-report=term",
    "test:all": "yarn test && yarn test:python",
    "backend": "cd src/app/api/backend && source venv/bin/activate && python app.py",
    "setup:tickets": "./setup-ticket-generator.sh",
    "i18n:check": "ts-node scripts/check-i18n-keys.ts"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "next": "15.5.4",
    "next-auth": "^4.24.13",
    "next-intl": "^4.8.3",
    "openai": "^6.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
